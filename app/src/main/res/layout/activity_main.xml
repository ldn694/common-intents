<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="4"
    android:columnCount="2"
    android:layout_column="2"
    android:layout_marginHorizontal="20dp"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:id="@+id/SetAlarmButton"
        android:onClick="onClickView"
        app:icon="@android:drawable/ic_menu_recent_history" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:text="Show Alarm"
        android:id="@+id/ShowAlarmButton"
        android:onClick="onClickView"
        app:icon="@android:drawable/ic_menu_recent_history" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:text="Start Timer"
        android:id="@+id/StartTimerButton"
        android:onClick="onClickView"
        app:icon="@android:drawable/ic_menu_recent_history" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:text="Show Timer"
        android:id="@+id/ShowTimerButton"
        android:onClick="onClickView"
        app:icon="@android:drawable/ic_menu_recent_history" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/TurnOnCameraButton"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:onClick="onClickView"
        android:text="Camera"
        app:icon="@android:drawable/ic_menu_camera" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/TurnOnVideoButton"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:onClick="onClickView"
        android:text="Video"
        app:icon="@android:drawable/ic_menu_camera" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/GetLocationButton"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:onClick="onClickView"
        android:text="Location"
        app:icon="@android:drawable/ic_menu_mylocation" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/NewMailButton"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:onClick="onClickView"
        android:text="Mail"
        app:icon="@android:drawable/ic_menu_edit" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/YoutubeSearchButton"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:onClick="onClickView"
        android:text="Youtube"
        app:icon="@android:drawable/ic_media_play" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/OpenSettingsButton"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:onClick="onClickView"
        android:text="Settings"
        app:icon="@android:drawable/ic_menu_manage" />

</GridLayout>
